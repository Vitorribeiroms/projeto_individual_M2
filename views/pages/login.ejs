<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/messages.css">
</head>
<body>
<div class="login-page">
    <div class="left-side">
        <img src="/assets/Logo-revex.png" alt="Logo REVEX">
    </div>
    <div class="right-side">
        <div class="top-bar">
            <a href="/" class="voltar-link">VOLTAR</a>
        </div>
        <div class="form-container">
            <h2>Entrar</h2>
            <p>Entre para acessar a plataforma</p>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>
            
            <form action="/auth/login" method="POST">
                <div class="input-group">
                    <img src="/assets/favicon.ico" alt="Email">
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="input-group">
                    <img src="/assets/favicon.ico" alt="Senha">
                    <input type="password" name="senha" placeholder="Senha" required>
                </div>
                <div class="remember-me">
                    <input type="checkbox" name="manter_logado" id="manter_logado">
                    <label for="manter_logado">Lembrar-me</label>
                </div>
                <button type="submit" class="btn-login">Entrar</button>
            </form>
            <div class="divider"></div>
            <a href="/auth/registro" class="signup-link">Cadastre-se</a>
        </div>
    </div>
</div>
</body>
</html>
